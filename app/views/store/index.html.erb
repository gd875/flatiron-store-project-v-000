<% @categories.each do |category| %>
  <p><%= link_to category.title, category_path(category) %></p>
<% end %>

<% @items.each do |item| %>
    <% if item.available %>
    <p><%= item.title %> | <%= number_to_currency(item.price.to_f/100) %> | <%= button_to 'Add to Cart', line_items_path(item_id: item) %></p>
    <% end %>
<% end %>

<% if current_cart %>
  <%= link_to "Cart", cart_path(current_cart) %>
<% end %>